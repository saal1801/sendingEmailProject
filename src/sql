
DROP TABLE IF EXISTS emailpro;
CREATE DATABASE EMAILDB;
USE EMAILDB;
CREATE TABLE IF NOT EXISTS `emailpro`(
	`id` VARCHAR(255),
	`attempts` INT(6) default 0,
    `EmailSender` VARCHAR(30) ,
    `EmailReceiver` VARCHAR (30) ,
    `status` VARCHAR(30) NOT NULL DEFAULT "PENDING" ,
    `subject` VARCHAR(30) ,
    `body` VARCHAR (255) ,
    `Received_Date`  TIMESTAMP NULL DEFAULT CURRENT_TIMESTAMP,
    `Next_Attempt`  TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    PRIMARY KEY(id)
    -- Sent_Date TIMESTAMP
) ENGINE = InnoDB AUTO_INCREMENT=0 DEFAULT CHARSET=utf8;

 -- INSERT INTO emailpro (`status`) VALUE ('PENDING');



